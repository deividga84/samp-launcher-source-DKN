<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/news_image"
        android:layout_width="@dimen/_240sdp"
        android:layout_height="@dimen/_140sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="@dimen/_240sdp"
        android:layout_height="@dimen/_140sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:background="@drawable/ic_news_image_bg"
        app:layout_constraintBottom_toBottomOf="@+id/news_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/news_image"
        app:layout_constraintTop_toTopOf="@+id/news_image" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="@dimen/_240sdp"
        android:layout_height="@dimen/_120sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/news_image"
        app:srcCompat="@drawable/ic_news_text_bg" />

    <TextView
        android:id="@+id/news_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="Atualização do mapeamento"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="@+id/news_image"
        app:layout_constraintStart_toStartOf="@+id/news_image" />

    <TextView
        android:id="@+id/news_info"
        android:layout_width="@dimen/_225sdp"
        android:fontFamily="@font/montsserat_semibold"
        android:layout_height="@dimen/_100sdp"
        android:textSize="@dimen/_10sdp"
        android:textColor="#FFFFFF"
        android:text="Enim voluptas harum adipisci quod velit suscipit beatae. Aut voluptatem magni. Consequatur dolor doloremque consequatur qui quia accusamus eos. Natus cumque mollitia consequuntur. Aperiam aut esse aut et consectetur incidunt veritatis. Voluptatem et quaerat quam temporibus molestiae. Tempore esse eum consequuntur quo totam iste et distinctio consequatur..."
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="@+id/imageView5"
        app:layout_constraintStart_toStartOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5" />
</androidx.constraintlayout.widget.ConstraintLayout>