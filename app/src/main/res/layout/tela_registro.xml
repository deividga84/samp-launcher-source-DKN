<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tela_registro"
    android:textAlignment="viewStart">

    <!-- BLOCO DO LOGIN CENTRALIZADO VERTICALMENTE E ALINHADO À ESQUERDA -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bloco_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- TÍTULO -->

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="E-Mail"
            android:textColor="#F0F0F0"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/caixa_usuario" />

        <EditText
            android:id="@+id/caixa_email"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/caixa_personalizada"
            android:inputType="text|textEmailAddress"
            android:paddingStart="5sp"
            android:paddingTop="5sp"
            android:textColor="#FDFDFD"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView18" />

        <!-- SUBTÍTULO -->

        <!-- LABEL USUÁRIO -->

        <!-- CAMPO USUÁRIO -->

        <!-- LABEL SENHA -->

        <!-- CAMPO SENHA -->

        <!-- ESQUECI A SENHA -->

        <!-- BOTÃO LOGAR -->

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="REGISTRO"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="-4dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="Preencha os dados para registrar"
            android:textColor="#4DDF2C"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="Usuário"
            android:textColor="#F0F0F0"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView3" />

        <EditText
            android:id="@+id/caixa_usuario"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/caixa_personalizada"
            android:inputType="text"
            android:paddingStart="5sp"
            android:paddingTop="5sp"
            android:textColor="#FDFDFD"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView4" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="Senha"
            android:textColor="#F0F0F0"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/caixa_email" />

        <EditText
            android:id="@+id/caixa_senhareg"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/caixa_personalizada"
            android:inputType="text"
            android:paddingStart="5sp"
            android:paddingTop="5sp"
            android:textColor="#FDFDFD"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView5" />

        <Button
            android:id="@+id/botao_registrar"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/button_background"
            android:fontFamily="@font/montserrat_bold"
            android:text="REGISTRAR"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/caixa_senhareg" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
