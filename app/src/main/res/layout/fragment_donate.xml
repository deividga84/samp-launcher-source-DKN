<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montsserat_semibold"
        android:text="Loja"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.076" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome no jogo"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_13sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:fontFamily="@font/montsserat_semibold"
        app:layout_constraintBottom_toTopOf="@+id/donate_nickname"
        app:layout_constraintStart_toStartOf="@+id/donate_nickname" />

    <EditText
        android:id="@+id/donate_nickname"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_65sdp"
        android:background="@drawable/ic_nickname_bg"
        android:ems="24"
        android:fontFamily="@font/montserrat_bold"
        android:hint="Nick_Name"
        android:inputType="text"
        android:lines="1"
        android:paddingLeft="@dimen/_15sdp"
        android:textColor="@color/white"
        android:textColorHint="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:fontFamily="@font/montsserat_semibold"
        android:text="Seleção de servidor"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintStart_toStartOf="@+id/donate_nickname"
        app:layout_constraintTop_toBottomOf="@+id/donate_nickname" />

    <Spinner
        android:id="@+id/server_select"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_30sdp"
        android:background="@drawable/style_spinner"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montsserat_semibold"
        android:text="Valor da recarga"
        android:textColor="#FFFFFF"
        android:layout_marginTop="@dimen/_7sdp"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintStart_toStartOf="@+id/donate_summa"
        app:layout_constraintTop_toBottomOf="@+id/server_select" />

    <EditText
        android:id="@+id/donate_summa"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_35sdp"
        android:background="@drawable/ic_nickname_bg"
        android:ems="24"
        android:fontFamily="@font/montserrat_bold"
        android:hint="50$"
        android:inputType="text"
        android:lines="1"
        android:layout_marginTop="@dimen/_30sdp"
        android:paddingLeft="@dimen/_15sdp"
        android:textColor="@color/white"
        android:textColorHint="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/server_select" />

    <Button
        android:id="@+id/button_donate"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:text="Ir para o pagamento"
        android:textStyle="normal"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/montsserat_semibold"
        android:background="@drawable/ic_button_bg"
        android:layout_marginTop="@dimen/_25sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/donate_summa" />

</androidx.constraintlayout.widget.ConstraintLayout>